            </Image.RenderTransform>
        </Image>
        <TextBlock x:Name="textBlock" Margin="0,22,10,0" TextWrapping="Wrap" Height="32" VerticalAlignment="Top" HorizontalAlignment="Right" Width="170" RenderTransformOrigin="0.283,0.521"><Run Text="Идет загрузка данных! "/><LineBreak/><Run Text="Это займет несколько секунд"/><Run Text="!"/></TextBlock>
    </Grid>
